<section class="content-header">
</section>
<section class="content">
  <div class="box">
    <%= form_for @shift_activity do |f| %>
      <div class="box-header">
        <h3 class="box-title">New ShiftActivity</h3>
        <div class="box-tools pull-right">
          <div class="btn-group">
            <%= link_to "Cancel",shift_activities_path, class: "btn btn-danger" %>
          </div>

          <%= f.submit "Create", class: "btn btn-primary" %>
        </div>
      </div>
      <div class="box-body">``

        <div class="form-group">
          <%= f.label :date %>
          <%= f.text_field :date, class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :amount %>
          <%= f.text_field :amount, class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :remarks %>
          <%= f.text_field :remarks, class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :shift_id %>
          <%= f.text_field :shift_id, class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label :shift_activity_type %>
          <%= f.text_field :shift_activity_type, class: "form-control"%>
        </div>

      </div>
    <% end %>
  </div>
</section>
